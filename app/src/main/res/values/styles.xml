<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="Toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorMoreDark</item>
        <item name="android:textColor">@color/justWhite</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/justWhite</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RobotoButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/colorMoreDark</item>
        <item name="android:textColor">@color/justWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
